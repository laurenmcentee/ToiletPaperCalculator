<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toilet Paper Calculator"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much I have (in rolls)"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="231dp" />

    <EditText
        android:id="@+id/editTextRolls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="250dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Household Members"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="318dp" />

    <EditText
        android:id="@+id/editTextHouseMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="391dp" />

    <Spinner
        android:id="@+id/spinnerBrand"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="410dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- or -"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="448dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sheets Per Roll"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="487dp" />

    <EditText
        android:id="@+id/editTextSheets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="506dp" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="571dp" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="571dp" />

    <Button
        android:id="@+id/buttonMoreParameters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="+add more parameters"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="641dp" />

</androidx.constraintlayout.widget.ConstraintLayout>